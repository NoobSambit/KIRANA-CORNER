{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.js)", "dest": "/$1", "headers": { "Content-Type": "application/javascript" } },
    { "src": "/(.*\\.css)", "dest": "/$1", "headers": { "Content-Type": "text/css" } },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


