{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      } 
    },
    { 
      "src": "api/**/*.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**/*"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/ai/recipe.ts": {
      "maxDuration": 30
    },
    "api/ai/stock-match.ts": {
      "maxDuration": 30
    },
    "api/ai/vision.ts": {
      "maxDuration": 30
    }
  }
}


